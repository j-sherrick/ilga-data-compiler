{
   "compilerOptions": {
      "module": "nodenext",
      "target": "es2020",
      "baseUrl": ".",
      "paths": {
         "@interfaces/*": ["./src/schemas/ILCS/interfaces/*"],
         "@models/*": ["./src/schemas/ILCS/models/*"],
         "@services/*": ["./src/services/ILCS/*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
   },
   "include": ["src/**/*", "tests/**/*"],
   "exclude": ["node_modules"]
}
